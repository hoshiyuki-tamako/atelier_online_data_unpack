doctype html
html
  head
    title #{that.i18nService.i18n.__("アトリエオンライン資料庫")}
    style.
      .indexes-container {
        display: flex;
        flex-direction: column;
      }
      .index-row-container {
        display: flex;
        flex-wrap: wrap;
      }
      .index-container {
        width: 200px;
        height: 200px;
        text-align: center;
        overflow: hidden;
        text-align: center;
      }
      .index-container img {
        width: 100px;
      }
  body
    div
      p
        span Game Version 3.12.1 (日本語) 
          - if (that.i18nService.i18n.getLocale() !== 'ja-JP')
            a(href="..") link
        br
        span Game Version 3.5.0 (中文) 
          - if (that.i18nService.i18n.getLocale() !== 'zh-TW')
            a(href="tw") link
      p Updated #{updateDate}
      p
        span Twitter 
        a(href="https://twitter.com/hoshiyuki_git" target="_blank") @hoshiyuki_git
    hr
    div.indexes-container
      - for (const row of pageChunks)
        div.index-row-container
          - for (const page of row)
            div.index-container
              a(href= page.href target="_blank")
                p= that.i18nService.i18n.__(page.title)
                - if (page.img && page.img.src)
                  img(src= page.img.src alt= that.i18nService.i18n.__(page.title))
    hr
    div
      h3 #{that.i18nService.i18n.__("他人の攻略サイト")}
      br
      div
        p ブレセイル観光局
        p
          a(href="https://bresail-kanko.info/index.html" target="_blank") https://bresail-kanko.info/index.html
        p
          a(href="https://twitter.com/bresail_kanko" target="_blank") https://twitter.com/bresail_kanko
        p
          a(href="https://twitter.com/re_dream5" target="_blank") https://twitter.com/re_dream5
      hr
      div
        p アトリエオンライン攻略日記〜シャオンのアトリエ〜
        p
          a(href="https://ameblo.jp/shana12151014/" target="_blank") https://ameblo.jp/shana12151014/
        p
          a(href="https://twitter.com/_shaon" target="_blank") https://twitter.com/_shaon
      hr
      div
        p かぴ
        p
          a(href="https://twitter.com/kapi_atorie" target="_blank") https://twitter.com/kapi_atorie
      hr
      div
        p アトリエオンライン攻略Wikiまとめ【ブレセイルの錬金術士】
